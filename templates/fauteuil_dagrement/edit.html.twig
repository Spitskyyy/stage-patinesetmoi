{% extends 'base.html.twig' %}

{% block title %}Edit FauteuilDagrement
{% endblock %}

{% block body %}
	<h1>Edit FauteuilDagrement</h1>

	<div>
		<label>Images actuelles :</label>
		<div class="d-flex flex-wrap">
			{% for picture in fauteuil_dagrement.pictures %}
				<div class="m-2 position-relative">
					<img src="{{ asset('uploads/images/' ~ picture) }}" width="100" class="rounded shadow">
					<input type="checkbox" name="delete_pictures[]" value="{{ picture }}">
