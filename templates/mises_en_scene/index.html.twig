			<!-- Blog Posts Section -->
			<style>
				.post-img {
					height: 450px;

					display: flex;
					align-items: center;
					justify-content: center;
					overflow: hidden;
					border-radius: 8px;
					box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
				}

				.post-img img {
					width: 100%;
					height: 100%;
					object-fit: cover;
					transition: transform 0.2s ease-in-out;
				}

				.post-img img:hover {
					transform: scale(1.05);
				}

				.pagination .page-link {
					color: #333;
					background-color: transparent;
					border: 1px solid #ddd;
				}

				.pagination .page-link:hover {
					color: #fff;
					background-color: #ffc107;
					border-color: #ffc107;
				}

				.pagination .page-item.active .page-link {
					color: #fff;
					background-color: #ffc107;
					border-color: #ffc107;
				}

				.pagination .page-link i {
					color: #333;
				}
			</style>
			<!-- Blog Posts Section -->
			<section id="blog-posts" class="blog-posts section">
				<a href="{{ path('app_mises_en_scene_new') }}" class="btn btn-primary mb-4">Create New</a>
				<div class="container py-5">
					<div class="row row-cols-1 row-cols-md-3 g-4">
						{% for mises_en_scene in mises_en_scene %}
							<div class="col">
								<article class="card h-100" style="width : 80%; height:70%;">
									<div
										class="post-img">
										<!-- Carrousel d'images -->
										<div id="carousel-{{ mises_en_scene.id }}" class="carousel slide" data-bs-ride="carousel">
											<div class="carousel-inner">
												{% if mises_en_scene.pictures is not empty %}
													{% for picture in mises_en_scene.pictures %}
														<div class="carousel-item {% if loop.first %} active {% endif %}">
															<img src="{{ asset('uploads/images/' ~ picture) }}" class="d-block w-100" alt="{{ mises_en_scene.title }}">
														</div>
													{% endfor %}
												{% else %}
													<div class="carousel-item active">
														<img src="{{ asset('uploads/images/' ~ mises_en_scene.picture) }}" class="d-block w-100" alt="{{ mises_en_scene.title }}">
													</div>
												{% endif %}
											</div>
											<button class="carousel-control-prev" type="button" data-bs-target="#carousel-{{ mises_en_scene.id }}" data-bs-slide="prev">
												<span class="carousel-control-prev-icon" aria-hidden="true"></span>
												<span class="visually-hidden">Previous</span>
											</button>
											<button class="carousel-control-next" type="button" data-bs-target="#carousel-{{ mises_en_scene.id }}" data-bs-slide="next">
												<span class="carousel-control-next-icon" aria-hidden="true"></span>
												<span class="visually-hidden">Next</span>
											</button>
										</div>
									</div>
									<div class="card-body d-flex flex-column">
										<h5 class="card-title">{{ mises_en_scene.title }}</h5>
										<div class="actions mt-auto">
											<a href="{{ path('app_mises_en_scene_show', {'id': mises_en_scene.id}) }}" class="btn btn-info">Show</a>
											<a href="{{ path('app_mises_en_scene_edit', {'id': mises_en_scene.id}) }}" class="btn btn-warning">Edit</a>
										</div>
									</div>
								</article>
							</div>
						{% else %}
							<div class="col-12">
								<p class="text-center">No records found</p>
							</div>
						{% endfor %}
					</div>
				</div>

				<!-- End Blog Posts Section -->

				<!-- Pagination -->

				<section id="blog-pagination" class="blog-pagination section">
					<div class="container">
						<div class="d-flex justify-content-center">
							<ul class="pagination">
								{% if currentPage > 1 %}
									<li class="page-item">
										<a class="page-link" href="{{ path('app_mises_en_scene_index', {'page': currentPage - 1}) }}">
											<i class="bi bi-chevron-left"></i>
										</a>
									</li>
								{% endif %}

								{% for page in 1..totalPages %}
									<li class="page-item {% if page == currentPage %} active {% endif %}">
										<a class="page-link" href="{{ path('app_mises_en_scene_index', {'page': page}) }}">{{ page }}</a>
									</li>
								{% endfor %}

								{% if currentPage < totalPages %}
									<li class="page-item">
										<a class="page-link" href="{{ path('app_mises_en_scene_index', {'page': currentPage + 1}) }}">
											<i class="bi bi-chevron-right"></i>
										</a>
									</li>
								{% endif %}
							</ul>
						</div>
					</div>
				</section>

				<!-- End Pagination -->

