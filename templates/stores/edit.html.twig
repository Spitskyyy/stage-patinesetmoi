{% extends 'base.html.twig' %}

{% block title %}Edit Stores{% endblock %}

{% block body %}
    <h1>Edit Stores</h1>

    <div>
		<label>Images actuelles :</label>
		<div class="d-flex flex-wrap">
			{% for picture in store.pictures %}
				<div class="m-2 position-relative">
					<img src="{{ asset('uploads/images/' ~ picture) }}" width="100" class="rounded shadow">
					<input type="checkbox" name="delete_pictures[]" value="{{ picture }}">
					Supprimer
				</div>
			{% endfor %}
		</div>
	</div>

    {{ include('stores/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('app_stores_index') }}">back to list</a>

    {{ include('stores/_delete_form.html.twig') }}
{% endblock %}
