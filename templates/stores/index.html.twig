{% extends 'base.html.twig' %}

{% block title %}Stores index{% endblock %}

{% block body %}
    <h1>Stores index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Picture</th>
                <th>Usetxt</th>
                <th>Width</th>
                <th>Height</th>
                <th>Lining</th>
                <th>Fabric</th>
                <th>Time</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for store in stores %}
            <tr>
                <td>{{ store.id }}</td>
                <td>{{ store.title }}</td>
                <td>{{ store.picture }}</td>
                <td>{{ store.usetxt }}</td>
                <td>{{ store.width }}</td>
                <td>{{ store.height }}</td>
                <td>{{ store.lining }}</td>
                <td>{{ store.fabric }}</td>
                <td>{{ store.time }}</td>
                <td>
                    <a href="{{ path('app_stores_show', {'id': store.id}) }}">show</a>
                    <a href="{{ path('app_stores_edit', {'id': store.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_stores_new') }}">Create new</a>
{% endblock %}
