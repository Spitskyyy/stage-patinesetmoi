{% extends 'base.html.twig' %}

{% block title %}Garniture index{% endblock %}

{% block body %}
    <h1>Garniture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Picture</th>
                <th>Detail</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for garniture in garnitures %}
            <tr>
                <td>{{ garniture.id }}</td>
                <td>{{ garniture.title }}</td>
                <td>{{ garniture.picture }}</td>
                <td>{{ garniture.detail }}</td>
                <td>
                    <a href="{{ path('app_garniture_show', {'id': garniture.id}) }}">show</a>
                    <a href="{{ path('app_garniture_edit', {'id': garniture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_garniture_new') }}">Create new</a>
{% endblock %}
